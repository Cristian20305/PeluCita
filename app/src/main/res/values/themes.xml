<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ðŸŽ¨ Tema PRINCIPAL -->
    <style name="Theme.PeluCita" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Personalizacion de colores o tipografÃ­as  -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- SPLASH SCREEN (solo visible al iniciar la app) -->
    <style name="Theme.PeluCita.Splash" parent="Theme.SplashScreen">
        <!-- Fondo del splash screen -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <!-- Logo del splash screen (debe estar en res/drawable/logo_splash) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>

        <!-- Al terminar el splash, cargamos el theme principal de la app -->
        <item name="postSplashScreenTheme">@style/Theme.PeluCita</item>
    </style>

</resources>